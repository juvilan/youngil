                blocks: [
                    { type: 'summary', description: '<strong>고사 문항:</strong> 책임감 있는 검토' },
                    { type: 'summary', description: '<strong>채점 일정:</strong> 기한 엄수' },
                    { type: 'summary', description: '<strong>생기부 작성:</strong> 점검 전 완료 목표' }
                ]
            }
        ];

        const tabContainer = document.getElementById('tab-container');
        const contentContainer = document.getElementById('content-container');

        // markdown ** 텍스트만 <strong> 태그로 변환하고, text-teal-600 클래스 적용
        function formatContent(content) {
            return content.replace(/\*\*(.*?)\*\*/g, '<strong class="text-teal-600">$1</strong>');
        }

        function renderContent() {
            slidesData.forEach((data, index) => {
                // 탭 버튼 생성 및 추가
                const tabButton = document.createElement('button');
                tabButton.className = 'tab-button py-3 px-2 text-slate-600 text-lg focus:outline-none';
                tabButton.textContent = data.menu;
                tabButton.addEventListener('click', () => showPage(index));
                tabContainer.appendChild(tabButton);

                // 페이지 요소 생성
                const pageEl = document.createElement('div');
                pageEl.id = data.id;
                pageEl.className = 'page'; // display: none 기본 적용

                let blocksHtml = '<div class="space-y-4">';
                if(data.blocks) {
                    data.blocks.forEach(block => {
                        if (block.type === 'summary') {
                             blocksHtml += `<div class="summary-highlight">${formatContent(block.description)}</div>`;
                        } else {
                            blocksHtml += `
                                <div class="content-block">
                                    ${block.subtitle ? `<h3 class="sub-title">${block.subtitle}</h3>` : ''}
                                    <div class="text-slate-600 leading-relaxed">${formatContent(block.description)}</div>
                                </div>
                            `;
                        }
                    });
                }
                blocksHtml += '</div>';
                
                let referenceHtml = '';
                if(data.reference) {
                    referenceHtml = `
                        <div class="reference-box">
                            <h4 class="font-bold text-slate-700 mb-2">${data.reference.title}</h4>
                            <ul class="list-disc list-outside ml-5 text-slate-600 space-y-2">
                                ${data.reference.points.map(point => {
                                    // 'highlight-item' 클래스를 직접 <li>에 적용하도록 수정
                                    if(point.includes('<span class="highlight-item">')) {
                                        // span 태그를 제거하고 li에 직접 클래스 부여
                                        const cleanPoint = point.replace('<span class="highlight-item">', '').replace('</span>', '');
                                        return `<li class="highlight-item">${formatContent(cleanPoint)}</li>`;
                                    }
                                    return `<li>${formatContent(point)}</li>`;
                                }).join('')}
                            </ul>
                        </div>`;
                }

                pageEl.innerHTML = `
                    <div class="max-w-3xl mx-auto w-full text-left pt-8">
                        <div class="flex items-center mb-6 pb-6 border-b border-slate-200">
                           <div class="text-6xl mr-6">${data.icon}</div>
                           <h2 class="text-2xl md:text-3xl font-bold text-slate-800">${data.title}</h2>
                        </div>
                        <div class="content-body text-lg md:text-xl leading-relaxed">
                            ${blocksHtml}
                            ${referenceHtml}
                        </div>
                    </div>
                `;
                contentContainer.appendChild(pageEl);
            });
        }

        // 특정 인덱스의 페이지를 활성화하고 탭 버튼도 활성화
        function showPage(index) {
            const pages = document.querySelectorAll('.page');
            const tabs = document.querySelectorAll('.tab-button');
            
            pages.forEach(page => page.classList.remove('active'));
            tabs.forEach(tab => tab.classList.remove('active'));

            if (pages[index]) pages[index].classList.add('active');
            if (tabs[index]) tabs[index].classList.add('active');
        }

        // DOMContentLoaded 이벤트 발생 시 콘텐츠 렌더링 및 첫 페이지 활성화
        document.addEventListener('DOMContentLoaded', () => {
            renderContent();
            showPage(0); // 페이지 로드 시 첫 번째 탭 활성화
        });
    </script>
</body>
</html>
